party Owner;

party Beneficiary;

policy Vault {
    hash: 0x0e1470667b6c1ad3fb65e4cccfbfd8dd1d687be97a4192c05b8521a4,
}

type VestingParams {
  lock_until: Int,
  owner: Bytes,
  beneficiary: Bytes,
}

tx lock(
    quantity: Int,
    until: Int,
) {
    input source {
        from: Owner,
        min_amount: Ada(quantity),
    }
    
    output {
        to: Vault,
        amount: Ada(quantity),
        datum: VestingParams {
            lock_until: until,
            owner: Owner,
            beneficiary: Beneficiary,
        },
    }

    output {
        to: Owner,
        amount: source - Ada(quantity) - fees,
    }
}

tx unlock(
    locked_utxo: UtxoRef,
) {
    input source {
        from: Vault,
        ref: locked_utxo,
        datum_is: VestingParams,
    }

    input gas {
        from: Beneficiary,
        min_amount: fees,
    }

    output {
        to: Beneficiary,
        amount: source - fees,
    }


    cardano::plutus_witness {
        version: 3,
        script: ,
    }
}